            -webkit-box-flex:1;
            background-color:#fff;
            font-size:12px;
            text-align:center;
            height:30px;
            width:2000px;
            line-height:30px;
        }
        .buttons .btn-rating-positive{
            background-color:#9CD082;
        }
        .buttons .btn-rating-negative{
            background-color:#D08282;
        }
        .rating-title{
            position:relative;
        }
        .contributes-wrap{
            right:10px;
            position:absolute;
            height:30px;
            top:0;
        }
